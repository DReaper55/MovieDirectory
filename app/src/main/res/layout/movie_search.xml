<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewSearchID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newSearchID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="New Search"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hintSearchID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newSearchID"
                android:hint="@string/search_item"
                android:paddingTop="20dp" />

            <Button
                android:id="@+id/submitSearchID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hintSearchID"
                android:background="@color/colorAccent"
                android:text="submit"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>